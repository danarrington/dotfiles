{
    "clang-format.style": "{BasedOnStyle: google, IndentWidth: 4}",
    "window.zoomLevel": 2,
    "vim.disableAnnoyingNeovimMessage": true,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "go.formatTool": "goimports",
    //"go.gopath": "/Users/danarrington/code/services/go",
    "go.toolsGopath": "/Users/danarrington/go",
    "go.inferGopath": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<C-n>"
            ],
            "after": [],
            "commands": [
                {
                    "command": ":nohl",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "leader",
                "s"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "<C-h>"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.focusLeftGroup",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "<C-l>"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.focusRightGroup",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "leader",
                "r"
            ],
            "after": [],
            "commands": [
                {
                    "command": "go.test.cursor",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "leader",
                "t"
            ],
            "after": [],
            "commands": [
                {
                    "command": "go.test.file",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "leader",
                "l"
            ],
            "after": [],
            "commands": [
                {
                    "command": "go.test.previous",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "leader",
                "<enter>"
            ],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.goToDeclaration",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "S-Tab"
            ],
            "after": [
                "<",
                "g",
                "v"
            ]
        },
        {
            "before": [
                "Tab"
            ],
            "after": [
                ">",
                "g",
                "v"
            ]
        },
        // Open Terminal
        {
            "before": [
                "leader",
                "`"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.terminal.toggleTerminal",
                    "args": []
                }
            ]
        },
        // Attempt to implement goto line nubmer with enter
        // Currently isn't possible: https://github.com/VSCodeVim/Vim/issues/3417
        // {
        //     "before": [
        //         "<enter>"
        //     ],
        //     "after": [
        //         "G",
        //     ]
        // },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "leader",
                "r"
            ],
            "after": [
                "\"",
                "_",
                "d",
                "P"
            ]
        },
    ],
    "extensions.ignoreRecommendations": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "workbench.panel.location": "bottom",
    "gitlens.keymap": "alternate",
    "[go]": {},
    "explorer.confirmDragAndDrop": false,
    "gitlens.historyExplorer.enabled": true,
    "gitlens.codeLens.enabled": false,
    "workbench.iconTheme": "material-icon-theme",
    "breadcrumbs.enabled": true,
    "go.testFlags": [
        // "-v"
    ],
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "editor.renderControlCharacters": false,
    "workbench.activityBar.visible": false,
    "workbench.sideBar.location": "left",
    "editor.glyphMargin": false,
    "editor.folding": false,
    "editor.parameterHints.enabled": false,
    "files.insertFinalNewline": true,
    "go.lintTool": "revive",
    "go.lintFlags": [
        "-config",
        "/Users/danarrington/go/revive.toml"
    ],
    "go.useLanguageServer": true,
    //"vim.autoSwitchInputMethod.enable": true
    /*---------- Bracket Pair Colorizer ---------- */
    "bracket-pair-colorizer-2.colors": [
        "White",
        // "Orchid",
        "Gold",
        "LightSkyBlue"
    ],
    "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
    "editor.matchBrackets": false
}
